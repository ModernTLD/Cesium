extends layout

append content
	.container
		h2 Login
		p.lead Login to your ModernTLD account here! 
			a(href="/register") Need an account?
		br
		form.col.s12.m4(role='form', action='/login', method='post')
			.form-group
				input.form-control(type='text', name='username', placeholder='Enter Username')
			.form-group
				input.form-control(type='password', name='password', placeholder='Password')
			button.btn(type='submit') Submit
			a.btn(href='/') Cancel
